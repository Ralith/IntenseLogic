import os

output    = "libilmath"
src_dir   = "#src/math"
build_dir = "#build"
inputs    = "*.c"

Import("platform")
Import("env")

sources = []
for module in Split(inputs) :
    sources.extend(Glob(src_dir + "/" + module))

objects = env.Object(source = sources, CPPPATH = src_dir)

libilmath = env.StaticLibrary(target = build_dir + "/" + output, 
                              source = objects)

Return("libilmath")

