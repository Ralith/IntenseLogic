CFLAGS = -Wall -g

: foreach common/*.c |> gcc $(CFLAGS) -c %f -o %o |> %B.o {common}
: foreach graphics/*.c |> gcc $(CFLAGS) -c %f -o %o |> %B.o {graphics}
: foreach network/*.c |> gcc $(CFLAGS) -c %f -o %o |> %B.o {network}
: main.c {common} {graphics} {network} |> gcc $(CFLAGS) -lc -lm %f -o %o |> il
