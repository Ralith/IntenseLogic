import os

output    = "libilcommon"
src_dir   = "#src/common"
build_dir = "#build"
inputs    = "*.c"

Import("platform")
Import("env")
Import("libilutil")
Import("libilmath")

common = env.Clone()

common.Append(CPPPATH = src_dir, LIBS=['ilutil', 'ilmath'])

if platform=="mingw":
    common.ParseConfig("pkg-config libglfw --libs --cflags")
    common.Append(LIBS=["libevent", "opengl32"])
else:
    common.ParseConfig("pkg-config libevent --libs --cflags")

sources = []
for module in Split(inputs) :
    sources.extend(Glob(module))

libilcommon = common.SharedLibrary(target = build_dir + "/" + output, 
                                   source = sources)
Depends(libilcommon, libilutil)
Depends(libilcommon, libilmath)

Return("libilcommon")

